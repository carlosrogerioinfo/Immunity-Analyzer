<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smart.smartdlitebr">
    <!-- android:screenOrientation="locked" -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_d3logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:name=".ApplicationClass"
        >

        <activity
            android:name=".ConvertionActivity"
            android:label="@string/toolbar_convertion_label"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity
            android:name=".ConfigurePartnerActivity"
            android:label="SD3 | Ativação Partner Version"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".CreateOrcamentActivity"
            android:label="@string/toolbar_orcament_label"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".CalculationGraphicsActivity"
            android:label="@string/toolbar_graphic_label"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".CalciumUrineCalculateActivity"
            android:label="@string/toolbar_urine24_label"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".CalculationPediatricActivity"
            android:label="@string/toolbar_children_label"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".CalculationActivity"
            android:label="@string/toolbar_adult_label"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".MainActivity"
            android:label="@string/toolbar_main_label"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>